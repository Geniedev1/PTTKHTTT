<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee" version="3.1">
    <welcome-file-list><welcome-file>index.jsp</welcome-file></welcome-file-list>

    <servlet>
        <servlet-name>Register</servlet-name>
        <servlet-class>labjava.servlet.RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>labjava.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ReaderServlet</servlet-name>
        <servlet-class>labjava.servlet.ReaderServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ReaderServlet</servlet-name>
        <url-pattern>/reader</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>SearchReaderServlet</servlet-name>
        <servlet-class>labjava.servlet.SearchReaderServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SearchReaderServlet</servlet-name>
        <url-pattern>/return-search</url-pattern>
    </servlet-mapping>
</web-app>
